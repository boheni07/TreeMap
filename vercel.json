{
    "version": 2,
    "builds": [
        {
            "src": "web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "web/api/index.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "web/api/index.py"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/web/index.html"
        }
    ]
}